# ===== CONFIGURACIÓN DE ENTORNO =====
# Copiar este archivo a .env y ajustar los valores según sea necesario

# Entorno de ejecución (uat1 o uat2)
ENVIRONMENT=uat1

# URLs base (se construyen automáticamente según ENVIRONMENT)
# BASE_URL será https://nuxqa4.avtest.ink/ para uat1
# BASE_URL será https://nuxqa5.avtest.ink/ para uat2

# ===== CONFIGURACIÓN DEL NAVEGADOR =====
BROWSER=chrome
HEADLESS=false
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080

# ===== TIMEOUTS (en segundos) =====
IMPLICIT_WAIT=10
EXPLICIT_WAIT=30
PAGE_LOAD_TIMEOUT=60

# ===== DATOS DE PRUEBA =====
TEST_ORIGIN=BOG
TEST_DESTINATION=MDE

# ===== CONFIGURACIÓN DE EJECUCIÓN =====
# Activar para ejecución más rápida (menos esperas)
FAST_EXECUTION=false

# Grabar videos de las pruebas
RECORD_VIDEO=false

# Tomar screenshots durante la ejecución
TAKE_SCREENSHOTS=true

# ===== BASE DE DATOS =====
DATABASE_PATH=database/test_results.db
